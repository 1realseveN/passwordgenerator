import tkinter as tk
import secrets
import string
from tkinter import *
    
def display_2():
    length = entry_1.get()
    # str in int
    # wenn keine zahl dann error window
    try:
       length = int(length)
       password = ''.join((secrets.choice(string.ascii_letters + string.digits + string.punctuation) for _ in range(length)))
    # ValueError zeigt neues Error-Fenster an, wenn keine Zahl eingegeben wurde
    except ValueError:
        #Error window
        showerror('ERROR; no number entered', 'Please enter a number for your password length')
    else:
        print(password)
        
# Hauptfenster
root = tk.Tk(className="Generate your password")
root.geometry('367x130')

# widgets erstellen
entry_1 = tk.Entry(root)
btn_1 = tk.Button(root, text = "generate password", command = display_2)
btn_2 = tk.Button(root, text = "close generator", command = root.destroy)
w1 = Label(root, text="Type in the length your password should have in the text field above")
w2 = Label(root, text="Password will be shown in your console")

# grid um widgets zum root hinzuzufÃ¼gen
entry_1.grid(row = 1, column = 1)
btn_1.grid(row = 2, column = 1)
btn_2.grid(row = 3, column = 1)
w1.grid(row = 4, column = 1)
w2.grid(row = 5, column = 1)

root.mainloop()
